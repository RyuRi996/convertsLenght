<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="10dp"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/greenleaves"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_radius"
            android:orientation="vertical"
            android:padding="10dp"
            android:gravity="center">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="@string/choice"
                app:hintTextAppearance="@style/hintSize"
                android:layout_marginBottom="10dp">

                <AutoCompleteTextView
                    android:id="@+id/inputType"
                    style="@style/textTile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=""
                    android:focusable="false"
                    android:inputType="none" />

            </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:endIconMode="clear_text"
                android:layout_marginBottom="10dp" >

                <EditText
                    android:id="@+id/inputValue"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="numberDecimal"
                    android:padding="10dp"
                    android:text=""
                    android:textSize="20dp"
                    android:fontFamily="@font/avo"/>

            </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:src="@drawable/tranfer"
                />

                <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="@string/choice"
                app:hintTextAppearance="@style/hintSize"
                android:layout_marginBottom="10dp">

                <AutoCompleteTextView
                    android:id="@+id/outputType"
                    style="@style/textTile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=""
                    android:focusable="false"
                    android:inputType="none"/>

            </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:endIconMode="clear_text"
        android:layout_marginBottom="10dp" >

        <EditText
            android:id="@+id/outputValue"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="numberDecimal"
            android:textSize="20dp"
            android:padding="10dp"
            android:text=""
            android:fontFamily="@font/avo"/>

    </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/reverse"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:fontFamily="@font/avob"
                android:backgroundTint="#DACF00"
                android:text="Reverse"
                android:textSize="20dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="invisible"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/convert"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:fontFamily="@font/avob"
                android:backgroundTint="#0AB8A4"
                android:text="Convert"
                android:textSize="20dp"/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>